<?xml version="1.0" encoding="utf-8" ?>
<ContentPage NavigationPage.HasNavigationBar="false" 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScanNShop_POC.Views.ListEdit"
             Title="Liste bearbeiten">

    <VerticalStackLayout BackgroundColor="#F0F8FF">
        <Grid>
            <Image Source="lebensmittel2.png"
                Aspect="AspectFill"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Opacity="0.07" />


            <ImageButton Source="Resources/Images/back_arrow.png"
                VerticalOptions="Start"
                HorizontalOptions="Start"
                WidthRequest="50"
                HeightRequest="50"
                Clicked="navigateBack"
                Padding="15,0,0,0">

            </ImageButton>

            <Button Text="🗑️"
                FontSize="20"
                WidthRequest="50"
                TextColor="White"
                BackgroundColor="Transparent"
                VerticalOptions="Start"
                HorizontalOptions="End"
                CornerRadius="15"
                Margin="5,5,0,0"
                Clicked="DeleteListButton_Clicked" />


            <AbsoluteLayout>
                <BoxView 
        Color="Black" 
        HeightRequest="1" 
        HorizontalOptions="FillAndExpand"
        AbsoluteLayout.LayoutBounds="0, 0.1, 1, 1"
        AbsoluteLayout.LayoutFlags="WidthProportional, XProportional, YProportional"/>
            </AbsoluteLayout>




            <Label Text="Liste"
                   TextColor="Black"
                   FontSize="Large"
                   FontAttributes="Bold"
                   Padding="20,60,0,0"></Label>
            <VerticalStackLayout Padding="0,90,0,0">

                <Label Text="Produkt manuell eingeben oder scannen"
                   TextColor="Black"
                   Padding="20,10,20, 0"
                   FontSize="Body"/>

                <Entry
                x:Name="productEntryField"
                Placeholder="Produkt"
                PlaceholderColor="Black"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="Small"
                Margin="15,10,0,0"
                />

                <Button Text="Hinzufügen" 
                    TextColor="White" 
                    WidthRequest="300"
                    FontSize="14"
                    Margin="0,5,70,0"
                    BackgroundColor="#4CAF50"
                    CornerRadius="15"
                    Clicked="AddProductButton_Clicked"
                    />

                <ImageButton 
                Source="Resources/Images/scanner.png"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="3"
                Margin="0,-45,-315,0"
                BackgroundColor="#4CAF50"
                    Clicked="OpenScannerPage"
                />

                <Button Text="Einkauf starten" TextColor="#4CAF50" BackgroundColor="Transparent" FontSize="17" BorderColor="#4CAF50"
                BorderWidth="2"
                FontAttributes="Bold"
                CornerRadius="15" WidthRequest="300" Margin="-70,20,0,0" Clicked="startShopping"></Button>




            </VerticalStackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>