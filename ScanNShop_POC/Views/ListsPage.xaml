<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScanNShop_POC.Views.ListsPage"
             xmlns:controls ="clr-namespace:ScanNShop_POC.Views"
             BackgroundColor="#F5F5F5"
             Shell.NavBarIsVisible="False">

    <Grid>

        <!-- Header-Design -->
        <Grid HeightRequest="60" VerticalOptions="Start" Margin="15,10,15,0">
            <Border BackgroundColor="White"
                    Stroke="#2C3E50"
                    StrokeShape="RoundRectangle 20,20,20,20"
                    StrokeThickness="2"
                    Padding="5">
                <Grid ColumnDefinitions="50,*,50">
                    <!-- Titel -->
                    <Label Grid.Column="1"
                           Text="Deine Listen"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Grid>
            </Border>
        </Grid>

        <StackLayout Padding="15,80,15,0" x:Name="listContent" Opacity="0">
            <ListView x:Name="listView"
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      SelectionMode="None"
                      ItemTapped="OnListTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="White"
                                   CornerRadius="15"
                                   Padding="15"
                                   Margin="0,5"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="*, Auto">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           TextColor="Black"
                                           VerticalOptions="Center"/>
                                    <Button Text="ðŸ—‘"
                                            BackgroundColor="Transparent"
                                            TextColor="Red"
                                            HorizontalOptions="End"
                                            CommandParameter="{Binding .}"
                                            FontSize="25"
                                            Clicked="DeleteList"/>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <controls:CustomTabbar VerticalOptions="End" />
    </Grid>
</ContentPage>
