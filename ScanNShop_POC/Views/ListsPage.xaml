<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ScanNShop_POC.Views"
             x:Class="ScanNShop_POC.Views.ListsPage"
             BackgroundColor="#F5F5F5"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Fancy Header -->
        <Grid HeightRequest="70" VerticalOptions="Start" Margin="15,15,15,0">
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="10"
                   BorderColor="#D6E4E5">
                <Grid ColumnDefinitions="*,Auto,*">
                    <Label Grid.Column="1"
                           Text="Deine Listen"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontFamily="Varela"/>
                </Grid>
            </Frame>
        </Grid>

        <!-- List Content -->
        <StackLayout Padding="20,95,20,10" x:Name="listContent" Opacity="0">
            <ListView x:Name="listView"
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      SelectionMode="None"
                      BackgroundColor="Transparent"
                      ItemTapped="OnListTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="White"
                                   CornerRadius="20"
                                   Padding="20"
                                   Margin="0,8"
                                   HasShadow="True"
                                   BorderColor="#E0E0E0">
                                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#37474F"
                                           VerticalOptions="Center"
                                           FontFamily="Varela"/>
                                    <Button Text="ðŸ—‘"
                                            BackgroundColor="Transparent"
                                            TextColor="#D32F2F"
                                            FontSize="22"
                                            FontAttributes="Bold"
                                            HorizontalOptions="End"
                                            CommandParameter="{Binding .}"
                                            Clicked="DeleteList"/>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>

        <!-- Custom Tabbar -->
        <controls:CustomTabbar VerticalOptions="End" />
    </Grid>
</ContentPage>
