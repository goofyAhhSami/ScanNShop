<?xml version="1.0" encoding="utf-8" ?>
<ContentPage NavigationPage.HasNavigationBar="false" 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScanNShop_POC.MainPage"
             >

    <ScrollView BackgroundColor="#F0F8FF">
        <Grid>

            <Image Source="lebensmittel1.png"
                   Aspect="AspectFill"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   Opacity="0.07" />


            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">

                <Label
                x:Name="animatedLabel"
                TextColor="#333333"
                FontSize="24"
                FontFamily="Pacifico"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                Margin="0,0,0,10" />


                <!-- Zentrales Button Layout -->
                <Grid VerticalOptions="Center" HorizontalOptions="Center">
                    <Button
                        x:Name="CreateList"
                        Text="Neue Liste ➕"
                        FontSize="18"
                        HeightRequest="50"
                        WidthRequest="250"
                        BackgroundColor="Transparent"
                        TextColor="#4CAF50"
                        BorderColor="#4CAF50"
                        BorderWidth="2"
                        FontAttributes="Bold"
                        CornerRadius="15"
                        Clicked="createNewList" />
                </Grid>

                <!--<Button Text="Alle Listen löschen"
                Clicked="DeleteAllLists"
                BackgroundColor="Red"
                TextColor="White"
                Margin="10" /> -->


                <Button Text="Chat with AI"
                Clicked="openKochPage"
                WidthRequest="250"
                BorderWidth="2"
                CornerRadius="15"
                BorderColor="#4CAF50"
                FontAttributes="Bold"
                FontSize="18"
                BackgroundColor="Transparent"
                TextColor="#4CAF50"
                Margin="10" />

                <Label
                    Text="Vorhandene Einkaufslisten"
                    TextColor="#333333"
                    FontSize="23"
                    FontAttributes="Bold"
                    Margin="0,0,0,10"
                    HorizontalOptions="Center"/>


                <ListView x:Name="listView" 
          FlexLayout.Grow="1" 
          HasUnevenRows="True" 
          SeparatorVisibility="None"
          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <VerticalStackLayout Padding="5">
                                    <Button Text="{Binding Name}" 
                            Clicked="OnButtonClicked"
                            FontSize="Medium" 
                            HeightRequest="50"
                            TextColor="White"
                            BackgroundColor="#4CAF50" 
                            CornerRadius="15"
                            Padding="15,0"
                            BorderColor="#333333" 
                            BorderWidth="2"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center"
                            FontFamily="Anton"/>

                                </VerticalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
