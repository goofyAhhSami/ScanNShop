<ContentPage NavigationPage.HasNavigationBar="false" 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScanNShop_POC.Views.NewList"
             Title="Neue Liste erstellen"
             BackgroundColor="#F0F8FF">

    <Grid>
        <Image Source="grape.png"
               Aspect="AspectFill"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               Opacity="0.07" />

        <ImageButton Source="Resources/Images/back_arrow.png"
                     VerticalOptions="Start"
                     HorizontalOptions="Start"
                     WidthRequest="50"
                     HeightRequest="50"
                     Clicked="navigateBackToMainPage"
                     Padding="15,0,0,0">
        </ImageButton>

        <Grid VerticalOptions="Center" HorizontalOptions="Center">
            <Frame CornerRadius="10" 
                   BackgroundColor="#FFFFFF"
                   Padding="15"
                   HasShadow="True">
                <StackLayout>
                    <Label 
                        Text="Wie mÃ¶chten Sie die Liste benennen?"
                        TextColor="#333333"
                        Padding="20,10,20,0"
                        FontSize="Body" />

                    <Entry
                        x:Name="nameEntryField"
                        Placeholder="Name"
                        TextColor="#333333"
                        Margin="15,0" 
                        BackgroundColor="#FFFFFF" />

                    <Button
                        x:Name="saveList"
                        Text="Liste erstellen"
                        WidthRequest="360"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        Margin="0,10,0,0"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        BorderColor="#388E3C" 
                        BorderWidth="2"
                        CornerRadius="15"
                        Clicked="saveButton_Clicked" />
                </StackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>
